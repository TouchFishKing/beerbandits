<div class="container">
  <%= 'search#preferences' %>
  <div class="search-bar">
    <%= form_tag results_path, method: :get do %>
      <%= text_field_tag :location,
      params[:location],
      class: "form-control",
      id: "store-location",
      placeholder: "SEARCH BY LOCATION"
      %>
      <div id="banner-button">
        <%= submit_tag "Go", class: "button" %>
      </div>
    <% end %>
  </div>
</div>
