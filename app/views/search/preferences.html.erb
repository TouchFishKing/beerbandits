<div class="container">

    <%= simple_form_for :results, url: results_path, method: :get do |f| %>
    
    <div class="multistep-form js-multistep-form">

      <div class="multistep-form-step js-multistep-form-step multistep-form-step--active">
        <div class="checkbox-container">
          <h2>Pick your poison:</h2>
          <div class="checkbox-options">
      	    <%= f.collection_check_boxes(:category, [['Cider', 'Cider'], ['IPA', 'IPA'], ['Lager', 'Lager'], ['Pale Ale','Pale Ale']], :first, :last, include_hidden: false) do |b| %>
      	        <%= b.check_box class: 'checkbox-input' %>
      	        <%= b.label class: 'checkbox-label' do %>
      	        	<i class="fas fa-beer"></i>
      	        	<%= b.text %>
      	        <% end %>
      	    <% end %>
          </div>
          <div class="d-flex justify-content-center" >
            <button type="button" class="btn btn-primary js-multistep-form-step-next-btn">
              Next
            </button>
          </div>

        </div>
      </div>


      <div class="multistep-form-step js-multistep-form-step">
        <div class="radio-container">
          <h2 class="radio-header">Plans for tonight?</h2>
          <div class="beer-size-options multistep-form-question">
            <%= f.collection_radio_buttons(:size, [['pack', 'Quiet one'], ['case', 'Big night']], :first, :last, include_hidden: false) do |a| %>
              <%= a.radio_button class: 'beer-size-input' %>
              <% if a.value == 'case' %>
                <%= render "shared/beer-pack" %>
                <%= render "shared/beer-pack" %>
                <%= render "shared/beer-pack" %>
              <% else %>
                <%= render "shared/beer-pack" %>
              <% end %>
              <%= a.label class: 'beer-size-label' %>
            <% end %>
          </div>
          <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-primary js-multistep-form-step-previous-btn">
              Previous
            </button>
            <button type="button" class="btn btn-primary js-multistep-form-step-next-btn">
              Next
            </button>
          </div>
          
        </div>
      </div>

      <div class="multistep-form-step js-multistep-form-step">
        <%= f.input :location, as: :string, placeholder: 'Search your location...', label_html: { class: 'preferences-store-location' }, input_html: { id: 'store-location' } %>
        <div class="d-flex justify-content-center" >
          <button type="button" class="btn btn-primary js-multistep-form-step-previous-btn">
            Previous
          </button>
          <%= f.button :submit, value: 'Results', "data-disable-with" => "Results", class: "btn btn-primary js-multistep-form-step-next-btn" %>
          <% end %>
        </div>
      </div>
      
      

  
    </div>

</div>
